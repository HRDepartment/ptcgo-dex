{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es5",
    "lib": ["ES6"],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist"
  },
  "include": ["src/*.ts"]
}
